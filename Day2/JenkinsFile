pipeline {
    agent any

    stages {
        stage('CI') {
            steps {
                git 'https://github.com/mahmoud254/jenkins_nodejs_example'
                withCredentials([usernamePassword(credentialsId: 'docker-hubb', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh """
                    docker login -u ${USER}  -p  ${PASS}
                    docker build . -f dockerfile -t mohamedmamdouhiv/test:v1.0
                    docker push mohamedmamdouhiv/test:v1.0
                    """
                }
            }
        }
        stage('CD') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hubb', passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "docker login -u ${USER} -p ${PASS} "

                    sh """
                    docker run -p 3000:3000 -d mohamedmamdouhiv/test:v1.0
                    """
                }
            }
        }

    }
}
